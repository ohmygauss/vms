<p id="notice"><%= notice %></p>

<h2>Product</h2>
<p><%= @product.name %></p>

<h2>Vulnerabilities</h2>
<%= render @product.vulnerabilities %>

 <%= link_to 'Add vulnerability', new_product_vulnerability_path(@product) %>
        
<h2>Report</h2>

<% if @product.document.exists? %>
  <%= link_to "Download", @product.document.url(:original, false) %>
<% end %>

<%= form_for @product, url: product_path(@product), html: { multipart: true } do |form| %>
  <%= form.file_field :document %>
  <%= form.submit "Update report" %>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>